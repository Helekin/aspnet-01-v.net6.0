@model IEnumerable<ProjectViewModel>

@if (Model is not null)
{
    <div class="text-center" style="padding-top: 6rem;">
    <h1>My recents works</h1>
    <p>Here you can see some of my works</p>
</div>
    <div class="container">
    <div class="row row-cols-1 rows-cols-md-3 g-4">
        @foreach (var project in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <img src="@project.ImageUrl" class="card-img-top" alt="@project.Title" />
                        <div class="card-body">
                            <h5 class="card-title">@project.Title</h5>
                            <p class="card-text">@project.Description</p>
                        </div>
                        <div class="card-footer">
                            <a class="btn btn-primary" href="@project.Link" target="_blank" rel="noopener noreferrer">Visit</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}